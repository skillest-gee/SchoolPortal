# ============================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# NEVER COMMIT THE .env FILE TO GIT
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Production database URL
DATABASE_URL="postgresql://username:password@localhost:5432/school_portal?schema=public"

# Docker database credentials (for local development)
POSTGRES_DB=schoolportal
POSTGRES_USER=schoolportal
POSTGRES_PASSWORD=change_this_strong_password

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
# Your application URL
NEXTAUTH_URL="http://localhost:3000"

# Secret key for JWT tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_secret_key_here_change_this

# ============================================
# EMAIL CONFIGURATION (RESEND)
# ============================================
# Resend API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# From email address (must be verified in Resend)
FROM_EMAIL=noreply@yourdomain.com

# University name (used in email templates)
UNIVERSITY_NAME="Your University Name"

# ============================================
# AWS S3 CONFIGURATION (File Storage)
# ============================================
# AWS credentials for S3 storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your_bucket_name

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment (development, production, test)
NODE_ENV=development

# Optional: Redis URL for caching/sessions
REDIS_URL=redis://localhost:6379

# ============================================
# OPTIONAL: OAUTH PROVIDERS
# ============================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (optional)
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret

# ============================================
# USAGE INSTRUCTIONS
# ============================================
# 1. Copy this file: cp env.example .env
# 2. Fill in all values marked "your_*_here"
# 3. NEVER commit .env to git
# 4. Keep .env file secure and private
